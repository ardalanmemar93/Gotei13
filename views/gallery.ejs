<%- include('./partials/header') %>
<body class="gallery-body">
  <div class="container">
    <h1 class="mt-5 white">Character Gallery</h1>
    <h2 class="my-4 white">Published Characters:</h2>

    <% characters.forEach(function(character) { %>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title"><strong>Name:</strong> <%= character.name %></h5>
        <p class="card-text"><strong>Race:</strong> <%= character.race %></p>
        <p class="card-text"><strong>Background:</strong> <%= character.background %></p>
        <p class="card-text"><strong>Class:</strong> <%= character.dndClass %></p>
        <p class="card-text"><strong>Equipment:</strong> <%= character.equipment.join(', ') %></p>
        <a href="/characters/gallery/<%= character._id %>/story" class="btn btn-primary">View An Exclusive One Time Character Story</a>
      </div>

      <!-- Comment form for each character -->
      <form class="card-footer" method="POST" action="/characters/<%= character._id %>/comments">
        <div class="form-group">
          <label for="comment">Comment:</label>
          <textarea
            class="form-control"
            id="comment"
            name="comment"
            rows="4"
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-success">Submit Comment</button>
      </form>

      <!-- Display existing comments -->
      <div class="card-footer">
        <h3>Comments:</h3>
        <ul class="list-group">
          <% character.comments.forEach(function(comment) { %>
            <li class="list-group-item">
              <%= comment.text %>
              <form method="POST" action="/characters/<%= character._id %>/comments/<%= comment._id %>?_method=DELETE" style="display: inline;">
                <button type="submit" class="btn btn-danger">Delete Comment</button>
              </form>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
    <% }); %>
  </div>
</body>
</html>
